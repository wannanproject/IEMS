    <Caption Name="LOC_TYPE_NO" Value="站台类型" ></Caption>
    <Caption Name="LOC_NAME" Value="站台名称" ></Caption>
    <Caption Name="LOC_INDEX" Value="站台顺序号" ></Caption>
    <Caption Name="MAX_BUFFER" Value="缓存区大小" ></Caption>
    <Caption Name="LOC_GROUP_NO" Value="站台组" ></Caption>
    <Caption Name="LOC_MES_NO" Value="MES编码" ></Caption>
    <Caption Name="LOC_AGV_NO" Value="AGV编码" ></Caption>
    <Caption Name="LOC_PRIORITY" Value="优先级" ></Caption>
    <Caption Name="LOC_ENABLE" Value="可用状态" ></Caption>
    <Caption Name="LAST_USED_DATE" Value="最后使用时间" ></Caption>
    <Caption Name="ENABLE_RECORRECT_FLAG" Value="是否允许任务修正" ></Caption>
    <Caption Name="ENABLE_REPACKAGE_FLAG" Value="是否允许重新生成资料" ></Caption>
    <Caption Name="ENABLE_REQUEST_FLAG" Value="是否允许发起订单" ></Caption>
    <Caption Name="AUTO_REQUEST_MODE" Value="是否允许自动发起" ></Caption>
    <Caption Name="LIMIT_PALLET_VALID_TYPE" Value="限定物料非法种类" ></Caption>
    <Caption Name="LIMIT_ORDER_VALID" Value="限定失效类型" ></Caption>
    <Caption Name="JOB_MONITOR_FLAG" Value="作业监控标志" ></Caption>
