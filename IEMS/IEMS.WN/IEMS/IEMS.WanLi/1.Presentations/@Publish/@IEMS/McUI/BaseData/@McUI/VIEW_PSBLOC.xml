    <Caption Name="LOC_TYPE_NAME" Value="站台类型" ></Caption>
    <Caption Name="LOC_GROUP_NAME" Value="站台组" ></Caption>
  </Captions>
  <WebPage Title="站台信息维护">
  </WebPage>
  <Select>
    <ParamPanel>
      <ParamFields>
        <ParamField FieldName="LOC_NO" ></ParamField>
        <ParamField FieldName="LOC_TYPE_NO" Type="ComboBox" Nullable="true" Caption="站台类型"></ParamField>
        <ParamField FieldName="LOC_GROUP_NO" Type="ComboBox" Nullable="true" Caption="站台组"></ParamField>
      </ParamFields>
    </ParamPanel>
    <MainGrid>
      <GridColumns>
        <GridColumn ColumnName="LOC_NO" WIDTH="80"></GridColumn>
        <GridColumn ColumnName="LOC_NAME" WIDTH="180"></GridColumn>
        <GridColumn ColumnName="LOC_PLC_NO" WIDTH="80"></GridColumn>
        <!--<GridColumn ColumnName="LOC_TYPE_NO" WIDTH="80"></GridColumn>-->
        <GridColumn ColumnName="LOC_TYPE_NAME" WIDTH="120"></GridColumn>                     
        <!--<GridColumn ColumnName="LOC_GROUP_NO" ></GridColumn>-->
        <GridColumn ColumnName="LOC_GROUP_NAME" WIDTH="120"></GridColumn>
        <GridColumn ColumnName="LOC_MES_NO" WIDTH="120"></GridColumn>
        <GridColumn ColumnName="LOC_AGV_NO" ></GridColumn>       
        <GridColumn ColumnName="LOC_ENABLE" WIDTH="60"></GridColumn>
        <GridColumn ColumnName="LAST_USED_DATE" ColumnType="Date" ColumnFormt="yyyy-MM-dd HH:mm:ss"></GridColumn>      
      </GridColumns>
    </MainGrid>
    <MainDetail>
      <ParamFields>
        <ParamField FieldName="LOC_INDEX" ></ParamField>
        <ParamField FieldName="MAX_BUFFER" ></ParamField>
        <ParamField FieldName="LOC_PRIORITY" ></ParamField>
   
        <ParamField FieldName="ENABLE_RECORRECT_FLAG" ></ParamField>
        <ParamField FieldName="ENABLE_REPACKAGE_FLAG" ></ParamField>
        <ParamField FieldName="ENABLE_REQUEST_FLAG" ></ParamField>
        <ParamField FieldName="AUTO_REQUEST_MODE" ></ParamField>
        <ParamField FieldName="LIMIT_PALLET_VALID_TYPE" ></ParamField>
        <ParamField FieldName="LIMIT_ORDER_VALID" ></ParamField>
        <ParamField FieldName="JOB_MONITOR_FLAG" ></ParamField>
        <ParamField FieldName="LIMIT_CMD_FINISH" ></ParamField>
      </ParamFields>
    </MainDetail>
  </Select>
</UiConfig>